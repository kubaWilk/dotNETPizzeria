<Page x:Class="PizzeriaProjekt.GUI.MainMenu.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PizzeriaProjekt.GUI.MainMenu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF747CBD" Offset="0.003"/>
                <GradientStop Color="#FF9CCEA4" Offset="0.994"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="OrderPizzaBtn" Content="Zamow pizzę" HorizontalAlignment="Left" Margin="58,99,0,0" VerticalAlignment="Top" Height="44" Width="139" Click="OrderPizza_Click"/>
        <Button x:Name="OrderArchiveBtn" Content="Archiwum zamówień" HorizontalAlignment="Left" Margin="58,181,0,0" VerticalAlignment="Top" Height="44" Width="139" Click="OrderArchive_Click"/>
        <Button x:Name="MainMenuLogoutBtn" Content="Wyloguj sie" HorizontalAlignment="Left" Margin="687,397,0,0" VerticalAlignment="Top" Height="30" Width="94" Click="MainMenuLogoutBtn_Click"/>
    </Grid>
</Page>
