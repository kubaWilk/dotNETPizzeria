<Page x:Class="PizzeriaProjekt.GUI.MainMenu.PizzaOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PizzeriaProjekt.GUI.MainMenu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PizzaOrderPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF747CBD" Offset="0.003"/>
                <GradientStop Color="#FF9CCEA4" Offset="0.994"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ListBox x:Name="PizzasList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="28,64,383,176" SelectionChanged="PizzasList_SelectionChanged"/>
        <Label x:Name="TestLabel" Content="Label" HorizontalAlignment="Left" Margin="550,119,0,0" VerticalAlignment="Top"/>
        <Button x:Name="OrderUserDetailsBtn" Content="Dalej" HorizontalAlignment="Left" Margin="685,380,0,0" VerticalAlignment="Top" Height="34" Width="81" Click="OrderUserDetailsBtn_Click"/>
        <Button x:Name="goBackBtn" Content="Wstecz" HorizontalAlignment="Left" Margin="28,380,0,0" VerticalAlignment="Top" Height="34" Width="81" Click="Button_Click"/>
    </Grid>
</Page>
